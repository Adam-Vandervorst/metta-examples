######### FACE-ID DEMO ################
#######################################
# Face recognition nouns
(@feature-noun :amr-set function)
(@feature-noun :amr-set functionality)
(@feature-noun :amr-set capable)
(@feature-noun :amr-set ability)

# Face recognition verbs
(@activate-verb :amr-set activate)
(@activate-verb :amr-set demonstrate)
(@activate-verb :amr-set show)


# [Grace,] [please] activate/demonstrate/show  us/me your face recognition functionality/capability/abilities
(@faceID-req-say :amr-set (say :ARG0 i
                                   :ARG1 @faceID-req-sub
                                   :* *))
(@faceID-req-sub :amr-set (@activate-verb :* * :ARG1 (@feature-noun :* * :ARG1 (recognize :ARG1 face))))
(@faceID-req-sub :amr-set (@activate-verb :* * :ARG1 (@feature-noun :* * :ARG2 (recognize :ARG1 face))))

(@faceID-req :amr-set @faceID-req-say)
(@faceID-req :amr-set @faceID-req-sub)

