##### QA requests ####################
#######################################

# Intended sentence: Grace, can you answer medical questions?
(@QA-req-ask :amr-set (ask
    :* *
    :ARG1 @QA-req-sub))

# Intended sentence: Grace, can we ask you some medical questions?
# Intended sentence: Grace, can we ask some medical questions?
(@QA-req-ask :amr-set (a / ask
    :* *
    :ARG1 @QA-sub
    :polarity (a2 / amr-unknown)))

#Can you answer some questions?
#Can you answer some medical questions?
(@QA-req-sub :amr-set (possible
    :polarity (a / amr-unknown)
    :ARG1 (answer
        :* *
        :ARG1 @QA-sub)))

#Can I ask you some medical questions?
#Can I ask you medical questions?
(@QA-req-sub  :amr-set (p / possible
    :polarity (a / amr-unknown)
    :ARG1 (ask
        :* *
        :ARG1 @QA-sub)))

(@QA-sub :amr-set (question :* *))

(@QA-req :amr-set @QA-req-sub)
(@QA-req :amr-set @QA-req-ask)

